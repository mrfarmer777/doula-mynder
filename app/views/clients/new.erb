<h2>Add a New Client</h2>
<%if flash.has?(:message)%>
  <%=flash[:message]%>
<%end%>
<form method="POST" action="/clients">
  <label for="client[name]">Client Name: </label>
  <input type="text" name="client[name]" id="client_name" /><br />
  <label for="client[due_date]">Due Date: </label>
  <input type="date" name="client[due_date]" id="client_due_date" /><br />
  <label for="client[age]">Age: </label>
  <input type="number" name="client[age]" id="client_age" /><br />
  <label for="client[partner_name]">Partner Name: </label>
  <input type="text" name="client[partner_name]" id="client_partner_name" /><br />
  <label for="client[address]">Address: </label>
  <input type="text" name="client[address]" id="client_address" /><br />
  <label for="client[num_children]">Number of Children: </label>
  <input type="text" name="client[num_children]" id="client_num_children" /><br />
  <input type="submit" value="Add Client" id="submit" />
</form>
