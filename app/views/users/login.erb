<div class="container container-fixed text-center">
  <h2>Login to Doula Mynder</h2>
  <%if flash.has?(:message)%>
    <p class="flash_message">
      <%=flash[:message]%>
    </p>
  <%end%>
  <form class="form" method="POST" action="/login">
    <div class="form-group col-md-4 offset-md-4">
      <label for="username">Username: </label>
      <input class="form-control" type="text" name="username" id="username" />
    </div>

    <div class="form-group col-md-4 offset-md-4">
      <label for="username">Password: </label>
      <input class="form-control" type="password" name="password" id="password" />
    </div>

    <input class="btn btn-primary" type="submit" value="Login" id="submit" />
  </form>
  <br />
  <p style="font-size: .75em">
    Don't have Doula Mynder account? <a href="/signup">Sign up here</a>
  </p>

</div>
