<div class="row">
  <h1>Dashboard</h1>
</div>

<div class="row">
  <div class="col-md-6" id="user_data">
    <h3><%=current_user.name%></h3>
    <h3><%=current_user.company_name%></h3>
  </div>
</div>

<%if flash.has?(:message)%>
<p>
  <%=flash[:message]%>
</p>
<%end%>
<p>
  <%=current_user.clients.count%> active clients
</p>
<div>
  <a href="/clients/new">New Client</a>
  <a href="/births/new">New Birth</a>
  <a href="/users">View Doulas</a>
</div>
<ul>
  <%current_user.clients.each do |client|%>

    <li>
      <a href ="/clients/<%=client.id%>"><%=client.name%> and <%=client.partner_name%></a>
    </li>
  <%end%>
</ul>

<a href ="/logout">Log out</a>
